---
import '../styles/global.css'
import Layout from "../layouts/Layout.astro";
import { author } from '../sample';

import AppHeader from '../components/Header.astro';
import AppFooter from '../components/Footer.astro';
---

<Layout title="About | {author.name}">
    <AppHeader />
    
    <main class="min-h-screen py-16 sm:py-24">
        <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
                    About
                </h1>
                <div class="w-16 h-px bg-gray-400 mx-auto"></div>
            </div>

            <div class="space-y-6 text-gray-700 leading-relaxed">
                <p class="text-lg">
                    I'm a creative developer and designer passionate about building meaningful digital experiences.
                    With a focus on clean code and thoughtful design, I work at the intersection of technology and creativity.
                </p>

                <p class="text-lg">
                    My approach combines technical expertise with artistic vision, whether I'm developing web applications,
                    designing user interfaces, or exploring new technologies. I believe in the power of simplicity
                    and the importance of details.
                </p>
                <p class="text-lg">
                    When I'm not coding, you'll find me exploring new technologies, contributing to open-source
                    projects, or sharing knowledge through writing and teaching.
                </p>

                <div class="pt-8">
                    <div class="flex flex-wrap gap-4 justify-center">
                        <a href={author.linkedin} target="_blank" class="text-gray-600 hover:text-gray-900 transition-colors">
                            LinkedIn
                        </a>
                        <a href={author.github} target="_blank" class="text-gray-600 hover:text-gray-900 transition-colors">
                            GitHub
                        </a>
                        <a href={author.ig} target="_blank" class="text-gray-600 hover:text-gray-900 transition-colors">
                            Instagram
                        </a>
                        <a href={author.youtube} target="_blank" class="text-gray-600 hover:text-gray-900 transition-colors">
                            YouTube
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <AppFooter />
</Layout>