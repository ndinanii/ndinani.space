---
import Layout from '../layouts/Layout.astro';
import AppHeader from '../components/Header.astro';
import AppFooter from '../components/Footer.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout>
    <AppHeader />

    <main class="max-w-4xl mx-auto px-4 py-20 min-h-screen relative">
        
        <!-- Decorative clouds matching landing page style -->
        <img src="/cloud-icon.svg" alt="cloud" width="80" class="absolute -right-9 -top-4" />
        <img src="/cloud-icon.svg" alt="cloud" width="60" class="absolute left-10 top-40 opacity-50" />
        <img src="/cloud-weather.svg" alt="cloud" width="45" class="absolute right-20 top-60" />
        <img src="/cloud-icon.svg" alt="cloud" width="70" class="absolute -left-8 bottom-40 hidden md:block" />
        <img src="/cloud-weather.svg" alt="cloud" width="50" class="absolute right-10 bottom-20" />

        <section class="text-center mb-12 relative z-10">
            <div class="inline-block border-2 border-black px-4 py-1 font-bold mb-6" style="box-shadow: 4px 4px 0px 0px rgba(0,0,0,1); background-color: var(--yellow);">
                ABOUT ME
            </div>
            <h1 class="text-5xl md:text-6xl font-black mb-6">
                Coming Soon
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                This page is currently under construction. Check back soon for my story!
            </p>
        </section>

    </main>

    <CallToAction />
    <AppFooter />
</Layout>
