---
const achievements = [
  '65k+ Trailhead Points',
  '76+ Badges',
  '10+ Superbadges',
  '20+ Projects Built',
  'ü§ñ Certified Agentforce Specialist',
  '‚è≥ Platform App Builder (Pending)',
  '‚è≥ Platform Developer I (Pending)',
  '‚è≥ Business Analyst (Pending)'
]
---

<script>
import { gsap } from 'gsap';

document.addEventListener('DOMContentLoaded', function () {
    const clonedContainer = document.querySelector('#achievements-cloned') as any

    if (clonedContainer) {
        Array.from(clonedContainer.children).forEach((img: any) => {
            const clone = img.cloneNode(true);
            clonedContainer.appendChild(clone);
        })

        const tl = gsap.timeline({ repeat: -1 });
        tl.to(clonedContainer, {
            x: -(clonedContainer.scrollWidth / 2),  duration: 60, ease: 'none'
        })
    }
});
</script>



<section class="bg-linear-to-r from-blue-900 via-purple-900 to-indigo-900 py-8 relative overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative z-10">
        <h2 class="text-center text-white text-2xl md:text-3xl font-bold mb-6">Achievements</h2>
        <div class="overflow-hidden">
            <div class="flex items-center gap-8 md:gap-16" id="achievements-cloned">
                {achievements.map(item => (
                  <div class="text-white flex-1 text-xl md:text-2xl whitespace-nowrap font-medium opacity-90 hover:opacity-100 transition-opacity duration-300">
                    {item}
                  </div>
                ))}
            </div>
        </div>
    </div>
</section>