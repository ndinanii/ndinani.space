---
import Bars from "./Bars.astro"

import svgUnderline from '../assets/underline.svg'
import arrowCard from '../assets/arrow-card.svg'

const portfolio = [
  { 
    name: 'NextGen Electronics: Lead-to-Revenue Management', 
    desc: `Lead management process to solve "lead-leakage."`,
    cover: `https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2`,
    link: `https://github.com/ndinanii/salesforce-nextgen-lead-management`
  },
  { 
    name: 'Tech-Co Account Console', 
    desc: `Solution to transform Account Manager workflows from fragmented to unified`,
    cover: `https://images.pexels.com/photos/8062366/pexels-photo-8062366.jpeg?auto=compress&cs=tinysrgb&w=1600`,
    link: `https://github.com/ndinanii/salesforce-techco-account-console`
  },
  { 
    name: 'Brighttech', 
    desc: `Solution that delives a user-centric "mission control" app in Salesforce.`,
    cover: `https://images.pexels.com/photos/441963/pexels-photo-441963.jpeg?auto=compress&cs=tinysrgb&w=1600`,
    link: `https://github.com/ndinanii/salesforce-brighttech-performance-app`
  },
  
{
    name: 'Intergalactic Freight & Trade Corp', 
    desc: `A comprehensive freight management application built on Salesforce with a modern fullstack architecture.`,
    cover: `https://images.pexels.com/photos/34995630/pexels-photo-34995630.jpeg?auto=compress&cs=tinysrgb&w=1600`,
    link: `https://github.com/ndinanii/salesforce-intergalactic-freight-app`
},
    
]
---


<section class="py-25 space-y-10 px-5" id="work">
    <div class="max-w-md mx-auto relative ">
      <h1 class="text-4xl font-medium text-center">My Portfolio</h1>
      <img src={svgUnderline.src} alt="arrow" width="140" class="absolute left-50 -bottom-1" />
    </div>
  
    <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10"> 
      {portfolio.map(item => ( 
        <a href={item.link} target={item.link !== '#' ? '_blank' : '_self'} class="flex flex-col bg-white p-5 group relative transition-all duration-200 hover:shadow-[4px_4px_0px_rgba(0,0,0,0.3)] cursor-pointer">
          <div class="w-full h-[200px] overflow-hidden border-2">
           <img src={item.cover} alt={item.name} class="w-full h-full object-cover" />
          </div>
          <div class="space-y-1 pt-4">
            <div class="flex pr-2">
              <h2 class="text-xl font-medium flex-1">{item.name}</h2>
              <img src={arrowCard.src} alt="arrow" width="25" />
            </div>
            <p class="mr-20">{item.desc}</p>
          </div>
          <Bars />
        </a>
      ))}
    </div>
</section>