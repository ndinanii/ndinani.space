---
const mytools = [
  'Requirements Elicitation & Analysis', 'Salesforce Flow & Process Automation', 'Apex Development', 'Lightning Web Components (LWC)', 'AI Tools (Einstein, Agentforce)', 'Data Modeling & Management', 'Salesforce Security Model', 'Agile & DevOps (SFDX, Git)', 'Salesforce Platform Configuration', 'Testing & Quality (TDD)'
]
--- 
<script>
import { gsap } from 'gsap';

document.addEventListener('DOMContentLoaded', function () {
    const clonedContainer = document.querySelector('#cloned') as any

    Array.from(clonedContainer.children).forEach((img: any) => {
        const clone = img.cloneNode(true); 
        clonedContainer.appendChild(clone); 
    })

    const tl = gsap.timeline({ repeat: -1 });
    tl.to(clonedContainer, {
        x: -(clonedContainer.scrollWidth / 2),  duration: 50, ease: 'none'
    })
});
</script>
  


<section class="bg-black py-6 relative z-5">
    <div class="overflow-hidden">
        <div class="flex items-center gap-10 md:gap-30" id="cloned">
            {mytools.map(item => (
              <div class="text-white flex-1 text-2xl whitespace-nowrap"> {item} </div>
            ))}
        </div>
    </div>
</section>



